<div class="container py-5">
  <h1 class="text-center mb-4">MequiBot IA ğŸ</h1>

  <div id="messages" class="mb-4" style="height: 70vh; overflow-y: auto;">
    <%= render partial: "messages/message", collection: @messages %>
  </div>

  <%= simple_form_for [@chat, @message], url: chat_messages_path, method: :post, data: { turbo: true } do |f| %>
    <%= f.input :content, label: false, placeholder: "Pose ta question ou dis-moi ce que tu cherches...", input_html: { class: "w-100" } %>
    <%= f.submit "Envoyer", class: "btn btn-primary mt-2" %>
  <% end %>
</div>

<%= turbo_stream_from @chat %>
