<turbo-stream action="append" target="messages">
  <template>
    <%= render @message %>
  </template>
</turbo-stream>

<turbo-stream action="update" target="new_message">
  <template>
    <%= simple_form_for [@chat, Message.new],
          html: { id: "new_message", class: "d-flex align-items-center w-100" } do |f| %>

      <%= f.input :content,
            label: false,
            placeholder: "Pose ta question…",
            input_html: { class: "message-field flex-grow-1" } %>

      <button type="submit" class="send-btn ms-2">
        ➤
      </button>
    <% end %>
  </template>
</turbo-stream>
