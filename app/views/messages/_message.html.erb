<div id="<%= dom_id(message) %>" class="message <%= message.from_assistant? ? 'assistant' : 'user' %> mb-4">
  <div class="d-flex <%= message.from_assistant? ? 'justify-content-start' : 'justify-content-end' %>">
    <div class="p-3 rounded-4 <%= message.from_assistant? ? 'bg-light text-dark border' : 'bg-primary text-white' %>" style="max-width: 85%;">
      <%= simple_format(message.content) %>
      <small class="opacity-75"><%= message.sent_at %></small>
    </div>
  </div>
</div>
